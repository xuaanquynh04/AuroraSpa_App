<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        android:id="@+id/vpBanners"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vpBanners">

        <LinearLayout
            android:id="@+id/btnAll"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_bg"
                android:src="@drawable/ic_all" />

            <TextView
                style="@style/fontInter12Reg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Tất cả dịch vụ" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNail"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_bg"
                android:src="@drawable/ic_nail" />

            <TextView
                style="@style/fontInter12Reg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Nail" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnWash"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_bg"
                android:src="@drawable/ic_wash" />

            <TextView
                style="@style/fontInter12Reg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Gội đầu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnWax"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_bg"
                android:src="@drawable/ic_wax" />

            <TextView
                style="@style/fontInter12Reg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Waxing" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row1"
        android:minHeight="100dp">

        <LinearLayout
            android:id="@+id/btnRec"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:minHeight="100dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_bg"
                android:src="@drawable/ic_rec" />

            <TextView
                style="@style/fontInter12Reg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Gợi ý nail" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnCreateNail"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_bg"
                android:src="@drawable/ic_crnail" />

            <TextView
                style="@style/fontInter12Reg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Tạo nail" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNailPhoto"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_bg"
                android:src="@drawable/ic_crnailphoto" />

            <TextView
                style="@style/fontInter12Reg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Tạo nail từ ảnh" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnTry"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_bg"
                android:src="@drawable/ic_ar" />

            <TextView
                style="@style/fontInter12Reg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Thử nail" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/slogan1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/slogan_bg"
        android:text="AURORA SPA TRẢI NGHIỆM ĐẲNG CẤP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row2"
        android:layout_marginTop="10dp"
        style="@style/fontMont16Bold"
        android:textColor="@color/orange"
        android:gravity="center"
        android:padding="2dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XEM TẤT CẢ"
        style="@style/fontMont12Bold"
        android:gravity="right"
        android:layout_marginEnd="10dp"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/slogan1"
        android:layout_marginTop="5dp"
        android:id="@+id/txtAll"/>
    <androidx.recyclerview.widget.RecyclerView
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvProducts"
        android:scrollbars="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAll" />
    <TextView
        android:id="@+id/slogan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/slogan_bg"
        android:text="KHÁCH HÀNG NÓI GÌ VỀ AURORA SPA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvProducts"
        android:layout_marginTop="5dp"
        style="@style/fontMont16Bold"
        android:textColor="@color/orange"
        android:gravity="center"
        android:padding="2dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvFeedbacks"
        app:layout_constraintTop_toBottomOf="@+id/slogan2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:paddingVertical="10dp"/>
    <TextView
        android:id="@+id/slogan3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/slogan_bg"
        android:text="CÓ GÌ HOT TẠI AURORA SPA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvFeedbacks"
        android:layout_marginTop="5dp"
        style="@style/fontMont16Bold"
        android:textColor="@color/orange"
        android:gravity="center"
        android:padding="2dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/slogan3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvNews"
        app:layout_constraintTop_toBottomOf="@+id/slogan3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:clipToPadding="false"
        android:paddingVertical="10dp"
        android:nestedScrollingEnabled="false"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_cream_stroke"
    >
        <TextView
            android:id="@+id/AZ"
            style="@style/fontInter12Reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="A-Z"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ZA"
            style="@style/fontInter12Reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="111dp"
            android:paddingVertical="10dp"
            app:layout_constraintHorizontal_weight="1"
            android:text="Z-A"
            android:background="@drawable/bg_filter_sort_op"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AZ" />
        <TextView
            android:id="@+id/increase"
            style="@style/fontInter12Reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="85dp"
            android:paddingVertical="10dp"
            android:text="Giá tăng dần"
            android:background="@drawable/bg_filter_sort_op"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ZA" />

        <TextView
            android:id="@+id/decrease"
            style="@style/fontInter12Reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="70dp"
            android:paddingVertical="10dp"
            android:text="Giá giảm dần"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/increase" />

</androidx.constraintlayout.widget.ConstraintLayout>
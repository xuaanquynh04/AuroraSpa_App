<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonCustom" parent ="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_custom</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/text_color_button</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
    </style>
    <style name="ButtonCustomSmall">
        <item name="android:background">@drawable/button_custom</item>
        <item name="backgroundTint">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/text_color_button</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>